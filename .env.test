DATABASE_URL=sqlite:///:memory:
# Environment variables for test execution
ENVIRONMENT=test
FLEXT_API_TEST_MODE=true
LOG_LEVEL=DEBUG
TESTING=true

FLEXT_DISABLE_EXTERNAL_CALLS=true
FLEXT_MOCK_MODE=true
# Configurações específicas para testes
PYTEST_CURRENT_TEST=true

FLEXT_DB_TIMEOUT=${FlextApiConstants}.MONITORING_TIMEOUT}
# Configurações de timeout
FLEXT_HTTP_TIMEOUT=${FlextApiConstants}.TESTING_TIMEOUT}

FLEXT_CACHE_SIZE=10
# Configurações de cache para testes
FLEXT_CACHE_TTL=1

# Desabilitar logs externos em testes 
DISABLE_THIRD_PARTY_LOGS=true
