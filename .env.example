# FLEXT API Configuration
# Copy this to .env and customize for your environment

DEBUG=true
# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# Server Configuration
HOST=${FlextConstants}.Platform.DEFAULT_HOST}
PORT=${FlextConstants}.Platform.FLEXT_API_PORT}
WORKERS=4

JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=${FlextApiConstants}.DEFAULT_TIMEOUT}
JWT_SECRET_KEY=your-jwt-secret-key-here
# Security & Authentication
SECRET_KEY=your-secret-key-minimum-32-characters-long

DATABASE_MAX_OVERFLOW=40
DATABASE_POOL_SIZE=20
# Database
DATABASE_URL=postgresql://flext:password@${FlextConstants}.Platform.DEFAULT_HOST}:${FlextConstants}.Database.POSTGRESQL_PORT}/flext_api

REDIS_MAX_CONNECTIONS=50
# Redis Cache & Sessions
REDIS_URL=redis://${FlextConstants}.Platform.DEFAULT_HOST}:${FlextConstants}.Database.REDIS_PORT}/0

ALLOWED_HOSTS="["${FlextConstants}.Platform.DEFAULT_HOST}", "${FlextConstants}.Platform.LOCALHOST_IP}"]"
CORS_ALLOW_CREDENTIALS=true
# CORS & Security
CORS_ORIGINS="["http://${FlextConstants}.Platform.DEFAULT_HOST}:${FlextConstants}.Platform.FLEXT_WEB_PORT}", "http://${FlextConstants}.Platform.DEFAULT_HOST}:${FlextConstants}.Platform.DEFAULT_HTTP_PORT}"]"

RATE_LIMIT_BURST=10
# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

METRICS_PORT=9090
OPENTELEMETRY_ENABLED=false
# Monitoring & Observability
PROMETHEUS_ENABLED=true
SENTRY_DSN=

# External Services
FLEXT_GRPC_URL=${FlextConstants}.Platform.DEFAULT_HOST}:${FlextConstants}.Platform.FLEXT_GRPC_PORT}
FLEXT_WEB_URL=http://${FlextConstants}.Platform.DEFAULT_HOST}:${FlextConstants}.Platform.DEFAULT_HTTP_PORT}

STORAGE_PATH=/tmp/flext
# File Storage
UPLOAD_MAX_SIZE_MB=100

# Email (for notifications)
EMAIL_BACKEND=console
EMAIL_FROM=noreply@flext.dev
SMTP_HOST=${FlextConstants}.Platform.DEFAULT_HOST}
SMTP_PASSWORD=
SMTP_PORT=587
SMTP_USER=
